<RelativeLayout android:id="@+id/rela"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:text="nombre"
        android:layout_marginTop="15dp"
        android:background="@drawable/manroja"
        android:id="@+id/nombre"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:typeface="serif"
        android:textSize="27dp"
        android:shadowColor="#000000"
        android:shadowRadius="6"
        android:shadowDx="2"
        android:textColor="@color/white"
        android:layout_width="230dp"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/sview"
        android:layout_width="328dp"
        android:layout_centerInParent="true"
        android:layout_height="186dp"
        android:layout_below="@+id/nombre"
        android:background="@drawable/border"
        android:layout_marginTop="15dp"
        >
        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/expandableTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="gr"
            android:typeface="sans"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:shadowColor="#000000"
            android:shadowRadius="6"
            android:shadowDx="2"
            android:maxLines="5"
            android:ellipsize="end"
            app:animation_duration="1000">
        </at.blogc.android.views.ExpandableTextView>


    </ScrollView>
    <!-- Optional parameter animation_duration: sets the duration of the expand animation -->

    <Button
        android:id="@+id/button_toggle"
        android:layout_below="@+id/sview"
        android:fontFamily="sans-serif"
        android:layout_marginTop="2dp"
        android:background="@drawable/expandir"
        android:shadowColor="#000000"
        android:shadowRadius="6"
        android:shadowDx="2"
        android:layout_width="32dp"
        android:textAlignment="gravity"
        android:textSize="44dp"
        android:layout_centerInParent="true"
        android:layout_height="27dp"
        android:text=""/>


    <ImageView
        android:id="@+id/captura"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/sview"
        android:layout_centerHorizontal="true" />


    <ScrollView

        android:text="CAST"
        android:layout_below="@id/captura"
        android:layout_centerInParent="true"
        android:layout_width="328dp"
        android:background="@drawable/border"
        android:layout_height="146dp"
        >
        <TextView
            android:text="CAST"
            android:textSize="16.5dp"
            android:textColor="@color/white"
            android:id="@+id/cast"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowRadius="6"
            android:shadowDx="2"
            android:layout_centerInParent="true"
            android:layout_width="340dp"
            android:layout_height="160dp"/>
    </ScrollView>






</RelativeLayout>