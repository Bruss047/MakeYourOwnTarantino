<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mixresfondo2"
    tools:context="tarantino047.makeyourowntarantino.Actividades.Resultado">


    <TextView
        android:id="@+id/titulomix"
        android:text="MONJA"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:textSize="33dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/sview"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulomix"
        android:layout_marginTop="15dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <TextView

            android:id="@+id/sinop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulomix"
            android:layout_centerInParent="true"
            android:layout_marginLeft="18dp"
            android:padding="6dp"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:textStyle="bold" />

<RelativeLayout
    android:id="@+id/rL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/sinop">


    <ImageView
        android:id="@+id/star"
        android:background="@drawable/estrella"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"

        />

        <TextView
            android:id="@+id/puntaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/star"
            android:layout_alignRight="@+id/star"
            android:layout_centerVertical="true"

            android:gravity="center"
            android:text="5"
            android:textColor="#000000"
            android:textSize="40dp"
            android:textStyle="bold"

            />
</RelativeLayout>


        <TextView

        android:id="@+id/critica"
        android:textSize="21dp"
            android:padding="6dp"
            android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rL"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/compartir"
        android:layout_width="50dp"
        android:background="@drawable/share"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/critica"
        android:layout_margin="20dp"
        android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
